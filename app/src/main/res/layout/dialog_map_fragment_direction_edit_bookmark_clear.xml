<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="5dp"
    android:paddingEnd="10dp">

    <Button
        android:id="@+id/btn_showDirection_map_dialog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_directions_black"
        android:text="Show Direction"
        app:backgroundTint="#00897B" />

    <Button
        android:id="@+id/btn_editMarker_map_dialog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_baseline_edit_location_alt_24"
        android:text="Edit This Item"
        app:backgroundTint="#00897B" />

    <Button
        android:id="@+id/btn_clearMarker_map_dialog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_bookmarks_24"
        android:text="Add to Bookmark"
        app:backgroundTint="#00897B" />

</LinearLayout>